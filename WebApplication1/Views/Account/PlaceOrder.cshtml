@model WebApplication1.Models.PlaceOrderModel
@{
    ViewData["Title"] = "User Home Page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="align-content-start">
    <h2>Place a delivery order:</h2>
</div>
<form asp-action="PlaceOrder" method="post">
    <div class="form-group">
        <label>User Name</label>
        <input value="@if (User.Identity != null) { @User.Identity.Name }" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="SuperBoxId">Choose a SuperBox:</label>
        <select asp-for="SuperBoxId" class="form-control" asp-items="ViewBag.SuperBoxOptions">
            <option value="">Select a SuperBox</option>
        </select>
        <span asp-validation-for="SuperBoxId" class="text-danger"></span>
    </div>

    <div class="form-group">
            <label for="ReceiverUserName">Receiver User Name:</label>
        <input asp-for="ReceiverUserName" class="form-control"/>
        <span asp-validation-for="ReceiverUserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ReceiverSuperBoxId">Receiver SuperBox destination:</label>
        <select asp-for="ReceiverSuperBoxId" class="form-control" asp-items="ViewBag.SuperBoxOptions">
            <option value="">Select a SuperBox</option>
        </select>
        <span asp-validation-for="ReceiverSuperBoxId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IsUrgent">Is this order urgent?</label>
        <input asp-for="IsUrgent" type="checkbox" class="form-check-input"/>
        <span asp-validation-for="IsUrgent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RelevantInfo">Important information about your order:</label>
        <input asp-for="RelevantInfo" class="form-control"/>
        <span asp-validation-for="RelevantInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
